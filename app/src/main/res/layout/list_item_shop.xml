<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:padding="@dimen/length5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/imgv_listItem_shop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/length150dp"/>

        <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/length10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/nama_barang"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:id="@+id/tv_namaBarangListItem_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="@dimen/length10dp"
                android:id="@+id/tv_hargaBarangListItem_shop"
                android:text="@string/harga_barang"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.v7.widget.CardView>